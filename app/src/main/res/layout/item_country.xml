<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:padding="5dp"
    style="?android:attr/spinnerDropDownItemStyle"
    android:maxLines="1"
    android:layout_width="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imgCountry"
        android:layout_width="25.5dp"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/country_pe"
        android:contentDescription="@string/item_image_contentDescription" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/lblDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_preview_country"
        android:textColor="?android:textColorPrimary"
        android:gravity="center_horizontal"
        android:layout_toLeftOf="@+id/lblCode"
        android:layout_toStartOf="@+id/lblCode"
        android:layout_toRightOf="@+id/imgCountry"
        android:layout_toEndOf="@+id/imgCountry" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/lblCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="?android:textColorHint"
        android:text="@string/item_preview_dialCode" />

</RelativeLayout>